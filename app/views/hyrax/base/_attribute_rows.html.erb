<%# modified from hyrax for dynamic metadata with admin_only traits, description at top %>
<% initial_properties = [:description] %>
<% initial_properties.each do |prop_key| %>
  <% prop_value = presenter.dynamic_schema_service.view_properties[prop_key] %>
  <% next unless prop_value %>
  <%= render 'attribute_row', presenter: presenter, prop_key: prop_key, prop_value: prop_value %>
<% end %>
<% presenter.dynamic_schema_service.view_properties.each_pair do | prop_key, prop_value | %>
  <% next if prop_key.in? initial_properties %>
  <%= render 'attribute_row', presenter: presenter, prop_key: prop_key, prop_value: prop_value %>
<% end %>
